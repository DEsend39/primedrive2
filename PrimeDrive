<script>
const reviewsPerPage = 10;
const totalReviews = 500;
let currentPage = 1;

const names = [
"Алексей","Иван","Максим","Дмитрий","Артем","Сергей","Михаил",
"Никита","Андрей","Роман","Анна","Мария","Екатерина","Ольга","Юлия"
];

const cities = ["Москва","Санкт-Петербург","Казань"];

const texts = [
"Всё получилось, заказ получил без проблем.",
"Товар пришёл быстро, упаковка отличная.",
"Переживал, но всё пришло как обещали.",
"Заказ получен, всё соответствует описанию.",
"Отличный сервис, менеджер всё объяснил.",
"Доставка быстрее, чем ожидал.",
"Качество товара порадовало.",
"Заказывал впервые — остался доволен.",
"Связались быстро, отправили сразу.",
"Товар оригинальный, проверил.",
"Цена адекватная, сервис хороший.",
"Без задержек, всё чётко.",
"Рекомендую, буду заказывать ещё.",
"Очень доволен покупкой.",
"Всё прошло спокойно и без нервов.",
"Спасибо, заказ успешно получен.",
"Хорошая коммуникация на всех этапах.",
"Отправили в тот же день.",
"Получил именно то, что заказывал.",
"Сервис на уровне."
];

// создаём уникальные отзывы
const allReviews = [];
for (let i = 0; i < totalReviews; i++) {
    allReviews.push({
        name: names[i % names.length],
        city: cities[i % cities.length],
        text: texts[i % texts.length],
        stars: 5
    });
}

function renderStars(count) {
    return "★".repeat(count);
}

function renderReviews() {
    const container = document.getElementById("reviews");
    container.innerHTML = "";

    const start = (currentPage - 1) * reviewsPerPage;
    const end = start + reviewsPerPage;

    allReviews.slice(start, end).forEach(r => {
        const div = document.createElement("div");
        div.className = "review";
        div.innerHTML = `
            <div class="review-header">
                <div class="review-name">${r.name}</div>
                <div class="stars">${renderStars(r.stars)}</div>
            </div>
            <div class="review-text">${r.text}</div>
            <div class="review-city">${r.city}</div>
        `;
        container.appendChild(div);
    });

    const totalPages = Math.ceil(totalReviews / reviewsPerPage);
    document.getElementById("pageInfo").innerText =
        `Страница ${currentPage} из ${totalPages}`;

    document.querySelector('#pagination button:first-child').disabled = currentPage === 1;
    document.querySelector('#pagination button:last-child').disabled = currentPage === totalPages;

    window.scrollTo({ top: 0, behavior: "smooth" });
}

function nextPage() {
    currentPage++;
    renderReviews();
}
function prevPage() {
    currentPage--;
    renderReviews();
}

renderReviews();
</script>

</body>
</html>
